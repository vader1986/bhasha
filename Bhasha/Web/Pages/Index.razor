@page "/"

<AuthorizeView Roles="Author">
    <ReditectTo Url="/author"/>
</AuthorizeView>

<AuthorizeView Roles="Student">
    <ReditectTo Url="/student"/>
</AuthorizeView>

<AuthorizeView Roles="Admin">
    <ReditectTo Url="/roles"/>
</AuthorizeView>

<AuthorizeView Roles="Author,Student,Admin">
    <NotAuthorized>
        <ReditectTo Url="/Identity/Account/Login"/>
    </NotAuthorized>
</AuthorizeView>
