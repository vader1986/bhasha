@page "/"

<AuthorizeView Roles="Author">
    <RedirectTo Url="/author"/>
</AuthorizeView>

<AuthorizeView Roles="Student">
    <RedirectTo Url="/student"/>
</AuthorizeView>

<AuthorizeView Roles="Admin">
    <RedirectTo Url="/roles"/>
</AuthorizeView>

<AuthorizeView Roles="Author,Student,Admin">
    <NotAuthorized>
        <RedirectTo Url="/Identity/Account/Login"/>
    </NotAuthorized>
</AuthorizeView>
