@typeparam T

<MudSelect T="string"
           Label="@Label"
           Value="@_selectedValue"
           ValueChanged="@OnValueChanged">
    
    @foreach (var value in Values)
    {
        <MudSelectItem Value="@value.ToString()">@value.ToString()</MudSelectItem>
    }
    
    <MudSelectItem T="string" Value="@NoSelection">None</MudSelectItem>

</MudSelect>