@typeparam T

<MudSelect T="string"
           Label="@_label"
           Value="@_selectedValue"
           ValueChanged="@OnValueChanged">
    
    @foreach (var value in _enumValues)
    {
        <MudSelectItem Value="@value">@value</MudSelectItem>
    }
    
    <MudSelectItem T="string" Value="@NoSelection">None</MudSelectItem>

</MudSelect>