@inherits ComponentBase

<MudDialog>
    <DialogContent>
        <MudPaper Width="100%">
            <MudContainer MaxWidth="MaxWidth.Small">
                <MudCard Outlined="true">
                    <MudCardContent Style="text-align: center">
                        <MudTextField @bind-Value="@Name" Label="Name (English)" Variant="Variant.Outlined" />
                        <MudTextField @bind-Value="@Description" Label="Description (English)" Variant="Variant.Outlined" Lines="3" />
                        <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                        <MudNumericField Label="Required Level" @bind-Value="@RequiredLevel" Variant="Variant.Text" Min="1" Max="100" />
        
                        <MudButton OnClick="@OpenStudyCardSelectDialogAsync" Variant="Variant.Outlined" Color="Color.Primary">
                            Add Study Card
                        </MudButton>
        
                        <MudChipSet T="string">
                            @foreach (var studyCard in StudyCards)
                            {
                                <MudChip Value="studyCard">@studyCard.Name</MudChip>
                            }
                        </MudChipSet>
                        
                        <MudButton OnClick="@OpenAddPageDialog" Variant="Variant.Outlined" Color="Color.Primary">
                            Add Page
                        </MudButton>
        
                        <MudChipSet T="string">
                            @foreach (var addedPage in Pages)
                            {
                                <MudChip Value="addedPage">@addedPage</MudChip>
                            }
                        </MudChipSet>
                        
                        @if (!string.IsNullOrWhiteSpace(Error))
                        {
                            <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                            <MudText Color="Color.Error">@Error</MudText>
                        }
        
                        <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                    </MudCardContent>
                </MudCard>
            </MudContainer>
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@OnCancel">Cancel</MudButton>
        <MudButton Disabled="@DisableDelete" OnClick="@OnDelete">Delete</MudButton>
        <MudButton Disabled="@DisableSave" Variant="Variant.Outlined" OnClick="@OnSubmit">Save</MudButton>
    </DialogActions>
</MudDialog>

