@inherits ComponentBase

<MudCard>
    <MudCardContent Style="text-align: center">

        @if (Profiles.Any())
        {
            <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" Vertical="true">
                @foreach (var profile in Profiles)
                {
                    <MudButton OnClick="() => OnSelection(profile)">
                        @Language.Parse(profile.Key.Native).Pretty() -
                        @Language.Parse(profile.Key.Target).Pretty()
                    </MudButton>
                }
            </MudButtonGroup>
            <MudDivider DividerType="DividerType.Middle" Class="my-3" />
        }

        <MudText>Please select your native language</MudText>
        <MudChipSet T="string">
            @foreach (var language in Language.Supported.Values)
            {
                <MudChip OnClick="@(() => OnSelectedNative(language))">@language.Pretty()</MudChip>
            }
        </MudChipSet>

        <MudDivider DividerType="DividerType.Middle" Class="my-3" />
        <MudText>... and select your target language</MudText>
        <MudChipSet T="string">
            @foreach (var language in Language.Supported.Values)
            {
                <MudChip OnClick="@(() => OnSelectedTarget(language))">@language.Pretty()</MudChip>
            }
        </MudChipSet>

        <MudDivider DividerType="DividerType.Middle" Class="my-3" />
        <MudButton Disabled="@_disableCreateButton" Variant="Variant.Outlined" OnClick="@OnCreate">Create</MudButton>

    </MudCardContent>
</MudCard>