@inherits ComponentBase

<MudPaper Style="text-align: center">
    <MudList Clickable="true">
        @foreach (var chapter in Chapters)
        {
            @if (chapter.Completed)
            {
                <MudListItem Avatar="@Icons.Material.Filled.Image" OnClick="async () => await OnSelection(chapter)">
                    @chapter.Name
                </MudListItem>
            }
            else
            {
                <MudListItem Avatar="@Icons.Material.Outlined.Image" OnClick="async () => await OnSelection(chapter)">
                    @chapter.Name
                </MudListItem>
            }
        }
    </MudList>
</MudPaper>