@inherits ComponentBase

<MudList T="string">
    @foreach (var chapter in Chapters)
    {
        @if (chapter.Completed)
        {
            <MudListItem Icon="@Icons.Material.Filled.Image" OnClick="async () => await OnSelection(chapter)">
                @chapter.Name
            </MudListItem>
        }
        else
        {
            <MudListItem Icon="@Icons.Material.Outlined.Image" OnClick="async () => await OnSelection(chapter)">
                @chapter.Name
            </MudListItem>
        }
    }
</MudList>