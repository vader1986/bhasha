@inherits ComponentBase

<MudStack>
    @foreach (var translation in Values)
    {
        <MudTooltip Text="@translation.Language">
            <MudStack Row="true">

                <MudTextField T="string" Label="Translation"
                              @bind-Value="@translation.Text"
                              @bind-Value:after="@(async () => await OnChangeAsync(translation))"/>

                <MudTextField T="string" Label="Spoken"
                              @bind-Value="@translation.Spoken"
                              @bind-Value:after="@(async () => await OnChangeAsync(translation))"/>

                <MudIconButton 
                    Icon="@Icons.Material.Filled.Delete" 
                    OnClick="@(async () => await OnDeleteAsync(translation))"/>
                
            </MudStack>
        </MudTooltip>
    }
</MudStack>

<MudIconButton Disabled="@DisableAdd" OnClick="@OnAddAsync" Icon="@Icons.Material.Filled.Add" />
