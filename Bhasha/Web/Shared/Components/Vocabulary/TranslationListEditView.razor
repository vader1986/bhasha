@inherits ComponentBase

<MudStack>
    @foreach (var value in _values)
    {
        <MudTooltip Text="@value.Language">
            <MudStack Row="true">

                <MudTextField T="string" Label="Translation"
                              @bind-Value="@value.Text"
                              @bind-Value:after="@(async () => await OnChangeAsync(value))"/>

                <MudTextField T="string" Label="Spoken"
                              @bind-Value="@value.Spoken"
                              @bind-Value:after="@(async () => await OnChangeAsync(value))"/>

                <MudIconButton 
                    Icon="@Icons.Material.Filled.Delete" 
                    OnClick="@(async () => await OnDeleteAsync(value))"/>
                
            </MudStack>
        </MudTooltip>
    }
</MudStack>

<MudIconButton Disabled="@DisableAdd" OnClick="@OnAddAsync" Icon="@Icons.Material.Filled.Add" />
