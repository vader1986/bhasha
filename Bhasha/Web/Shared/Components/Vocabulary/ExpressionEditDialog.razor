@inherits ComponentBase

<MudDialog>
    <DialogContent>
        <MudPaper Width="100%">
            <MudContainer MaxWidth="MaxWidth.Small">

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <MudAlert Severity="Severity.Error">@_error</MudAlert>
                }

                <MudAlert Severity="Severity.Warning">@_text</MudAlert>
                
                <MudTextField T="string" Value="@_text" ValueChanged="@OnTextChangedAsync" />
                
                @if (_expression is not null)
                {
                    <ExpressionEditView @bind-Value="_expression" />
                    <TranslationListEditView Expression="_expression" />
                }
                
            </MudContainer>
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@OnCancel">Cancel</MudButton>
        <MudButton Disabled="@DisableSubmit" Variant="Variant.Outlined" OnClick="@OnSaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>