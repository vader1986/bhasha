@inherits ComponentBase

<MudCardContent Style="text-align: center">
    
    <MudTextField T="int" OnBlur="@OnValueChanged" @bind-Value="_level" Label="Level (1 to 100)"/>
    
    <EnumEditView T="ExpressionType" Value="@_expressionType" ValueChanged="@OnExpressionTypeChanged" Values="[ExpressionType.Expression, ExpressionType.Phrase]" />
    <EnumEditView T="PartOfSpeech" Value="@_partOfSpeech" ValueChanged="@OnPartOfSpeechChanged" Values="[PartOfSpeech.Adjective]" />
    <EnumEditView T="CEFR" Value="@_cefr" ValueChanged="@OnCefrChanged" Values="[]" />

    @if (!string.IsNullOrWhiteSpace(_resourceId))
    {
        <MudImage Src="@GetImageSource()" />
    }

    <MudFileUpload T="IBrowserFile" MaximumFileCount="1" FilesChanged="@OnResourceChanged">
        <ActivatorContent>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Image">
                Upload Image
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>
    
</MudCardContent>