@inherits ComponentBase

<MudCardContent Style="text-align: center">
    
    <MudTextField T="int" OnBlur="@OnValueChanged" @bind-Value="_level" Label="Level (1 to 100)"/>

    <EnumEditView T="ExpressionType" @bind-Value="_expressionType" @bind-Value:after="@OnValueChanged" />
    <EnumEditView T="PartOfSpeech" @bind-Value="_partOfSpeech" @bind-Value:after="@OnValueChanged" />
    <EnumEditView T="CEFR" @bind-Value="_cefr" @bind-Value:after="@OnValueChanged" />

    @if (!string.IsNullOrWhiteSpace(_resourceId))
    {
        <MudImage Src="@Resources.GetImageUrl(_resourceId)" />
    }

    <MudFileUpload T="IBrowserFile" MaximumFileCount="1" FilesChanged="@OnResourceChanged">
        <ActivatorContent>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Image">
                Upload Image
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>
    
</MudCardContent>