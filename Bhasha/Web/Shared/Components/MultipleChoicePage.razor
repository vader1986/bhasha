@if (!string.IsNullOrWhiteSpace(MultipleChoice.ImageId))
{
    <MudImage
        Src="@Resources.GetImageUrl(MultipleChoice.ImageId)"
        Elevation="35" Class="rounded-lg" />
}

<MudChipSet
    @bind-SelectedValue="_selectedChoice"
    @bind-SelectedValue:after="@OnValueChanged"
    SelectedColor="Color.Warning">
    @foreach (var choice in MultipleChoice.Choices)
    {
        @if (string.IsNullOrWhiteSpace(choice.Spoken))
        {
            <MudChip OnClick="@StateHasChanged" Value="@choice" Text="grey">@choice.Text</MudChip>
        }
        else
        {
            <MudChip OnClick="@StateHasChanged" Value="@choice" Text="grey">@choice.Text (@choice.Spoken)</MudChip>
        }
    }
</MudChipSet>
