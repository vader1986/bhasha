<br/>
<MudText>@Data.Word.Text</MudText>
<MudText Typo="Typo.body2">(@Data.Word.Language)</MudText>
<br/>

@if (_arguments != null)
{
    @if (!string.IsNullOrWhiteSpace(_arguments.ImageId))
    {
        <MudImage 
            Src="@Resources.GetImageUrl(_arguments.ImageId)"
            Elevation="35" Class="rounded-lg" />
    }
    
    <MudChipSet @bind-SelectedValue="_selectedChoice" SelectedColor="Color.Warning">
        @foreach (var choice in _arguments.Choices)
        {
            @if (string.IsNullOrWhiteSpace(choice.Spoken))
            {
                <MudChip OnClick="@StateHasChanged" Value="@choice" Text="grey">@choice.Text</MudChip>
            }
            else
            {
                <MudChip OnClick="@StateHasChanged" Value="@choice" Text="grey">@choice.Text (@choice.Spoken)</MudChip>
            }
        }
    </MudChipSet>
}
<br/>
<MudIconButton Icon="@Icons.Material.TwoTone.Audiotrack" OnClick="@OnPlayAudioClicked" Disabled="@DisableAudio"  Variant="Variant.Filled"/>
<MudIconButton Icon="@Icons.Material.TwoTone.Send"       OnClick="@OnSubmit"           Disabled="@DisableSubmit" Variant="Variant.Filled" />


