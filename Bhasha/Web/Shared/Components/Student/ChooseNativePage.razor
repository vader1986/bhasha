<br/>
<MudText>@_word</MudText>
<br/>

<MudChipSet SelectedColor="Color.Warning"
    @bind-SelectedValue="_selectedChoice"
    @bind-SelectedValue:after="@OnValueChanged">
    
    @foreach (var choice in _choices)
    {
        @if (DisplayImages)
        {
            <MudChip OnClick="@StateHasChanged" Value="@choice.Target">
                <ChildContent>
                    <MudImage Src="@Resources.GetImageUrl(choice.ResourceId!)"/>
                </ChildContent>
            </MudChip>
        }
        else
        {
            <MudChip OnClick="@StateHasChanged" Text="@choice.Native" Value="@choice.Target" />
        }
    }
    
</MudChipSet>
