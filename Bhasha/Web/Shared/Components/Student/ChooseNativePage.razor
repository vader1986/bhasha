<MudText>@_word</MudText>
<br/>

<MudChipSet
    SelectedColor="Color.Warning"
    @bind-SelectedValue="_selectedChoice"
    @bind-SelectedValue:after="@OnValueChanged">
    
    @foreach (var choice in _choices)
    {
        <MudChip OnClick="@StateHasChanged" Text="@choice.Native" Value="@choice.Target"/>
    }
    
</MudChipSet>
