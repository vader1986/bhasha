@inherits LayoutComponentBase

<MudThemeProvider @rendermode="RenderMode.InteractiveServer" />
<MudPopoverProvider @rendermode="RenderMode.InteractiveServer" />
<MudDialogProvider @rendermode="RenderMode.InteractiveServer" />
<MudSnackbarProvider @rendermode="RenderMode.InteractiveServer" />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Outlined.Home" Href="/"/>
        <LoginDisplay/>
    </MudAppBar>
    <MudMainContent Style="height: 95vh">
        <MudContainer Style="height: 100%">
            <MudContainer Style="height: 100%" MaxWidth="MaxWidth.Small">
                @Body
            </MudContainer>
        </MudContainer>
    </MudMainContent>
</MudLayout>

